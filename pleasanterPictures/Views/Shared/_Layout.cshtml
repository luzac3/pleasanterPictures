@using pleasanterPictures.Models.Entity.Share

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - 百酒会</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/plugin/material-symbols/index.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/spinkit/2.0.1/spinkit.min.css">
        @RenderSection("Styles", required: false)
    </head>
    <body>
        <div class="container">
            <div id="loading-overlay" class="loading-overlay nodisplay">
                <div class="loading"></div>
            </div>
            <main id="main" role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                <a asp-area="" asp-controller="Home" asp-action="Description">会について</a>
                &copy; 2025 - offlineMeeting
            </div>
        </footer>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/signalR/hubs"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
