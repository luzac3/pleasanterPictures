@using pleasanterPictures.Models.Entity.Share

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - 百酒会</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/plugin/material-symbols/index.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/spinkit/2.0.1/spinkit.min.css">
        @RenderSection("Styles", required: false)
    </head>
    <body class="nodisplay">
        <header>
            <nav class="navbar navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div id="menu" class="container-fluid">
                    @{
                        JoinerEntity? userData = ViewData["UserData"] as JoinerEntity;
                        <div id="name_wrapper">
                            <span id="user_name">@userData?.UserName</span>
                        </div>
                        <div id="level_wrapper">
                            <span>Lv:</span>
                            <span id="levels">@userData?.Level</span>
                            <span>(</span>
                            <span id="exp_now">@userData?.Exp</span>
                            <span>/</span>
                            <span id="exp_next">@userData?.ExpNext</span>
                            <span>)</span>
                        </div>
                        <div id="coins_wrapper">
                            <a asp-area="" asp-controller="Coins" asp-action="Index">
                                <img id="poncoin_img" src="/image/poncoin_192.png" />
                            </a>
                            <span id="poncoins">@userData?.Coins</span>
                        </div>
                    }
                    <button b-c19eioo5et class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span b-c19eioo5et class="navbar-toggler-icon"></span>
                    </button>
                <div id="main_menu"  class="navbar-collapse collapse justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark dot" asp-area="" asp-controller="Home" asp-action="Index">ホーム</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark dot" asp-area="" asp-controller="Pos" asp-action="Index">チュウモン</a>
                            </li>
                            @if (userData != null && userData.IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark dot" asp-area="" asp-controller="Pos" asp-action="UserOrders">チュウモンイチラン</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark dot" asp-area="" asp-controller="Picture" asp-action="Index">クイズ</a>
                            </li>
                            @if (userData != null && userData.IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark dot" asp-area="" asp-controller="Picture" asp-action="PictureList">クイズリスト</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark dot" asp-area="" asp-controller="Collection" asp-action="Index">ズカン</a>
                            </li>
                                <!--<a class="nav-link text-dark dot" asp-area="" asp-controller="Achievement" asp-action="Index">ジッセキ</a>-->
                        </ul>
                    </div>
                </div>
            </nav>
            @{
                string? controller = Context.Request.RouteValues["controller"]?.ToString();
                @switch(controller)
                {
                    case "Pos":
                        <partial name="/Views/Pos/_PosNavbar.cshtml" />
                        break;
                    case "Coins":
                        <partial name="/Views/Coins/_CoinsNavbar.cshtml" />
                        break;
                }
            }
        </header>
        <!-- navbarに関する処理 -->
        <script src="~/js/Layout.js"></script>
        <div class="container">
            <div id="loading-overlay" class="loading-overlay nodisplay">
                <div class="loading"></div>
            </div>
            <main id="main" role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                <a asp-area="" asp-controller="Home" asp-action="Description">会について</a>
                &copy; 2025 - offlineMeeting
            </div>
        </footer>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/signalR/hubs"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
